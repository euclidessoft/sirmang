<form method="post" action="{{ path('cellule_delete', {'id': cellule.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: inline;">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cellule.id) }}">
    <button class="btn btn-danger">Supprimer la Cellule</button>
</form>
