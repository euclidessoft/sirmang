<form method="post" action="{{ path('poste_delete', {'id': poste.id}) }}" onsubmit="return confirm('Voulez- vous vraiment supprimer le poste?');" style="display: inline;">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ poste.id) }}">
    <button class="btn btn-danger"><i class="fa fa-trash"></i> Supprimer</button>
</form>
